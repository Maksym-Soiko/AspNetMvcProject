@model SkillModel

@{
    ViewData["Title"] = "Детальніше про " + Model.Title;
}

<div class="max-w-3xl mx-auto p-8 bg-white shadow-lg rounded-2xl mt-10">
    <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">@Model.Title</h1>

    <div class="space-y-4">
        <div class="flex items-center space-x-4">
            <span class="text-lg font-medium text-gray-700">Color:</span>
            <div class="w-10 h-10 rounded-full border border-gray-300" style="background-color:@Model.Color;"></div>
        </div>

        <div>
            <h2 class="text-lg font-medium text-gray-700">Складність:</h2>
            <p class="mt-2 text-gray-600 bg-gray-100 p-4 rounded-lg shadow-sm">@Model.Complexity</p>
        </div>

        <div>
            <h2 class="text-lg font-medium text-gray-700">Опис:</h2>
            <p class="mt-2 text-gray-600 bg-gray-100 p-4 rounded-lg shadow-sm">@Model.Description</p>
        </div>
    </div>

    <div class="flex justify-between items-center mt-6">
        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
        {
            <a asp-controller="Skill"
               asp-action="Edit"
               asp-route-id="@Model.Id"
               class="bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-2 px-6 rounded-lg shadow-md transition duration-300">
                Редагувати
            </a>
        }
        <a asp-controller="Skill"
           asp-action="Index"
           class="bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-6 rounded-lg shadow-md transition duration-300">
            Назад
        </a>
    </div>
</div>

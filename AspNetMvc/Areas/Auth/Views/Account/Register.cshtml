@model RegisterForm
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewData["Title"] = "Реєстрація";
}

<div class="w-full max-w-md mx-auto p-6 bg-white shadow-lg rounded-2xl mt-10">
	<h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">@ViewData["Title"]</h1>

	<form method="post" asp-area="Auth" asp-controller="Account" asp-action="Register" enctype="multipart/form-data" class="space-y-4">
		<div>
			@Html.LabelFor(x => x.Login, new { @class = "block text-sm font-medium text-gray-700 mb-1" })
			@Html.TextBoxFor(x => x.Login, new { @class = "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-400 focus:border-transparent transition", type = "email" })
			@Html.ValidationMessageFor(x => x.Login, null, new { @class = "text-red-500 text-sm" })
		</div>
		<div>
			@Html.LabelFor(x => x.Password, new { @class = "block text-sm font-medium text-gray-700 mb-1" })
			@Html.PasswordFor(x => x.Password, new { @class = "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-400 focus:border-transparent transition", type = "password" })
			@Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-red-500 text-sm" })
		</div>
		<div class="flex justify-center space-x-4 mt-4">
			<button type="submit"
					class="bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-6 rounded-lg shadow-md transition duration-300">
				Зареєструватись
			</button>
			<a asp-area="Auth"
			   asp-controller="Account"
			   asp-action="Login"
			   class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-6 rounded-lg shadow-md transition duration-300">
				Увійти
			</a>
		</div>
	</form>
</div>
